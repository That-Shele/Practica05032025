@model Practica05032025.AppMVCDataFirst.Models.Producto

@{
    ViewData["Title"] = "Eliminar";
}

<h1 class="text-center p-2">@ViewData["Title"]</h1>

<h3>Quieres eliminar esto?</h3>
<div>
    <h4>@Html.DisplayFor(model => model.Nombre)</h4>
    <hr />

    <div role="tabpanel" class="row p-3">
        <!-- List group -->
        <div class="list-group col-4" id="myList" role="tablist">
            <a class="list-group-item list-group-item-action active" data-bs-toggle="list" href="#nombre" role="tab">@Html.DisplayNameFor(model => model.Nombre)</a>
            <a class="list-group-item list-group-item-acstion" data-bs-toggle="list" href="#desc" role="tab">@Html.DisplayNameFor(model => model.Descripcion)</a>
            <a class="list-group-item list-group-item-acstion" data-bs-toggle="list" href="#prec" role="tab">@Html.DisplayNameFor(model => model.Precio)</a>
            <a class="list-group-item list-group-item-acstion" data-bs-toggle="list" href="#stock" role="tab">@Html.DisplayNameFor(model => model.Stock)</a>
        </div>

        <!-- Tab panes -->
        <div class="tab-content col-8 text-center h3">
            <div class="tab-pane active" id="nombre" role="tabpanel">@Html.DisplayFor(model => model.Nombre)</div>
            <div class="tab-pane" id="desc" role="tabpanel">@Html.DisplayFor(model => model.Descripcion)</div>
            <div class="tab-pane" id="prec" role="tabpanel">@Html.DisplayFor(model => model.Precio)</div>
            <div class="tab-pane" id="stock" role="tabpanel">@Html.DisplayFor(model => model.Stock)</div>
        </div>
    </div>

    <form asp-action="Delete" class="row gap-2">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger col-1" />
        <a asp-action="Index" class="btn btn-outline-primary col-1">Volver</a>
    </form>
</div>
